#change working directory
CELERYBEAT_CHDIR={{ celery_config_path }}

# Path to celerybeat
CELERYBEAT={{ celery_beat_path }}

CELERY_CONFIG_MODULE="celeryconfig"

# Extra arguments to celerybeat
CELERYBEAT_OPTS="--schedule=/home/{{local_user}}/.celerybeat-schedule"

CELERYBEAT_LOG_FILE="/var/log/celery/celerybeat-{{celery_app_name}}.log"
CELERYBEAT_PID_FILE="/var/run/celery/celerybeat-{{celery_app_name}}.pid"

# Workers should run as an unprivileged user.
CELERYBEAT_USER={{ local_user }}
CELERYBEAT_GROUP={{ local_user }}
